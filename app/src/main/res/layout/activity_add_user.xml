<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Content dalam Nested ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorBackground"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvAddTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah User"
                android:textColor="@color/colorText"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="12dp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Name"
                android:padding="12dp"
                android:background="@drawable/custom_edittext"
                android:textColor="?android:textColorPrimary"
                android:textColorHint="?attr/colorOnSurfaceVariant"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etNik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter NIK"
                android:padding="12dp"
                android:background="@drawable/custom_edittext"
                android:textColor="?android:textColorPrimary"
                android:textColorHint="?attr/colorOnSurfaceVariant"
                android:inputType="number"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Address"
                android:padding="12dp"
                android:background="@drawable/custom_edittext"
                android:textColor="?android:textColorPrimary"
                android:textColorHint="?attr/colorOnSurfaceVariant"
                android:inputType="text"
                android:layout_marginTop="8dp"/>

            <!-- LinearLayout untuk tombol Ambil Gambar & Deteksi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnCaptureMeter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ambil Gambar"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnDetectMeter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Deteksi"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageIv"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tvMeterReading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detected Meter Reading: -"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="12dp"/>

            <Button
                android:id="@+id/btnSaveUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save User"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorBackground"
        app:itemIconTint="@color/colorText"
        app:itemTextColor="@color/colorText"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
