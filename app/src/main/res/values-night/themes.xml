<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.MBAM" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">@color/red</item>

        <!-- Background & Text -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/colorText</item>

        <!-- Bottom Navigation -->
        <item name="bottomAppBarStyle">@style/Widget.MaterialComponents.BottomAppBar.PrimarySurface</item>

        <!-- Toolbar -->
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="actionOverflowButtonStyle">@style/ToolbarStyle.Overflow</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/dark_gray</item>
    </style>

    <style name="Theme.MBAM" parent="Base.Theme.MBAM" />
</resources>
